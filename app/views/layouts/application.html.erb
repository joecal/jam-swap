<!DOCTYPE html>
<html>
  <head>
    <title>JamSwap</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <% if @current_user %>
        <h1><%= link_to "JamSwap", @current_user %></h1>
        <% else %>
        <h1><%= link_to "JamSwap", root_path %></h1>
        <% end %>
        <% if @current_user %>
        <li><%= link_to "Welcome, #{@current_user.email}!", user_path(@current_user) if @current_user %></li>
        <li><%= link_to "Sign Out", session_path, method: :delete if @current_user %></li>
        <li><%= link_to "Categories", categories_path %></li>
        <li><%= link_to "Posts", posts_path %></li>
        <li><%= link_to "Comments", comments_path %></li>
        <li><%= link_to "Users", users_path %></li>
      </ul>
      <% else %>
      <% end %>
      <% flash.each do |type, message| %>
        <p class="<%= type %>"><%= message %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
