<main data-ng-controller="job_controller as vm">
<div class="panel panel-default">
  <div class="panel-heading"><strong>{{JobShowViewModel.job.title}}</strong>
    <p class="pull-right">{{JobShowViewModel.job.created_at | date:'mediumDate'}}</p>
  </div>
  <div class="panel-body">
    <p>
      <strong>Description:</strong>
      <p>{{JobShowViewModel.job.description}}</p>
    </p>
  </div>
  <div class="panel-footer"><strong><a ng-href="{{JobShowViewModel.job.url}}">{{JobShowViewModel.job.url}}</a></strong></div>
</div>
</main>
