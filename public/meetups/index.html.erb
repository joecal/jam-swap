<main data-ng-controller="meetup_controller as vm">
<h2>Meetups</h2>
<input type="text" class="form-control" placeholder="Search" data-ng-model="vm.filter_on" />
  <br/>
  <tbody>
    <table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th data-ng-click="vm.sort_meetup_data_by('created_at')">Date</th>
      <th data-ng-click="vm.sort_meetup_data_by('title')">Title</th>
    </tr>
  </thead>
  <tbody>
    <tr data-ng-repeat="meetupvm in vm.meetup_data | filter: vm.filter_on | orderBy: vm.sort_on : vm.is_descending">
      <td><p data-ui-sref="meetupShow({id: meetupvm.id})">{{meetupvm.created_at | date:'mediumDate'}}</p></td>
      <td><a data-ui-sref="meetupShow({id: meetupvm.id})">{{meetupvm.title}}</a></td>
      <td><button data-ng-click="MeetupIndexViewModel.destroy(meetupvm)">Delete</button></td>
    </tr>
  </tbody>
</table>
<br/>
<form data-ng-submit="MeetupIndexViewModel.create() ">
  <label class="control-label" for="focusedInput"><h3>Add A New Meetup</h3></label>
  <div class="form-group">
    <input class="form-control" placeholder="Meetup Title" data-ng-model="MeetupIndexViewModel.meetup.title" />
  </div>
  <div class="form-group">
    <input class="form-control" placeholder="Meetup Description" data-ng-model="MeetupIndexViewModel.meetup.description" />
  </div>
  <div class="form-group">
    <input class="form-control" placeholder="Meetup Posting URL" data-ng-model="MeetupIndexViewModel.meetup.url" />
  </div>
  <div class="form-group">
    <button type="submit">Submit</button>
  </div>
</form>
</main>
